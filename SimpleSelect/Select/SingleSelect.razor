@namespace Components.Select
@typeparam TEntity

<div class="select-wrapper" @onclick="OnClickSelect">
    <div class="select @(isOpen ? "open" : "")">
        <div class="select__trigger">
            <span>@DefaultSelectLabel</span>
            <div class="arrow"></div>
        </div>
        <div class="custom-options">
            @foreach (TEntity item in Datasource)
            {
                <span class="custom-option selected" data-value="@item.Id" @onclick="@((args) => OnSelectItem(item))">@item.Name</span>
            }
        </div>
    </div>
</div>